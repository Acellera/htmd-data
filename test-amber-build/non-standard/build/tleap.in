# tleap file generated by amber.build
source ff0_leaprc.protein.ff19SB
source ff1_leaprc.lipid17
source ff2_leaprc.gaff2
source ff3_leaprc.RNA.Shaw
source ff4_leaprc.DNA.bsc1
source ff5_leaprc.water.tip3p

# Loading parameter files
loadamberparams param0_A00.frcmod
loadamberparams param1_ALC.frcmod
loadamberparams param2_HRG.frcmod
loadamberparams param3_NLE.frcmod
loadamberparams param4_OIC.frcmod

# Loading prepi topologies
loadamberprep topo0_A00.prepi
loadamberprep topo1_ALC.prepi
loadamberprep topo2_HRG.prepi
loadamberprep topo3_NLE.prepi
loadamberprep topo4_OIC.prepi

# Loading the system
mol = loadpdb input.pdb

# Adding disulfide bonds
bond mol.21.SG mol.324.SG
bond mol.104.SG mol.183.SG

setBox mol "vdw"

# Writing out the results
saveamberparm mol structure.prmtop structure.crd
quit