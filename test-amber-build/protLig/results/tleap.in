# tleap file generated by amber.build
source ff0_leaprc.lipid14
source ff1_leaprc.ff14SB
source ff2_leaprc.gaff

# Loading parameter files
loadamberparams param0_frcmod.ionsjc_tip3p
loadamberparams param1_frcmod.ions234lm_126_tip3p
loadamberparams param2_benzamidine.frcmod

# Loading prepi topologies

# Loading the system
mol = loadpdb input.pdb

# Loading the ligands
segmentL = loadmol2 segmentL.mol2
mol = combine {mol segmentL}

# Adding disulfide bonds
bond mol.8.SG mol.138.SG
bond mol.26.SG mol.42.SG
bond mol.110.SG mol.211.SG
bond mol.117.SG mol.184.SG
bond mol.149.SG mol.163.SG
bond mol.174.SG mol.198.SG

setBox mol "vdw"

# Writing out the results
saveamberparm mol structure.prmtop structure.crd
quit